exclude_paths:
    - bin
    - db
    - log
    - tmp
    - vendor
    - config
    - lib
    - test
    - spec
    - app/inputs
    - app/uploaders/concerns
    - app/views/scaffoldable
    - app/controllers/concerns/scaffoldable
    - app/validators
IrresponsibleModule:
    enabled: false
NilCheck:
    enabled: false
LongParameterList:
    enabled: false
UtilityFunction:
    public_methods_only: true
TooManyInstanceVariables:
    enabled: false